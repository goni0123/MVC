@page
@model WebRazor_Temp.Pages.Categories.IndexModel

<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-primary">Categories List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="/Categories/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i></i>Create New Categories
        </a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Categories Name
        </th>
        <th>
            Display Order
        </th>
        <th>

        </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(o=>o.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td >
                <div class="w-75 btn-group" role="group"> 
                <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil"></i>
                        Edit
                        </a>
                </div>
            </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
        </tr>
        }
    </tbody>
</table>